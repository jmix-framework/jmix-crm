<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://categoryItemListView.title">
    <data>
        <collection id="categoryItemsDc"
                    class="com.company.crm.model.catalog.item.CategoryItem">
            <fetchPlan extends="_base">
                <property name="category" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="categoryItemsDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <settings auto="true"/>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
            <genericFilter component="advancedFilter"/>
            <dataGridFilter component="categoryItemsDataGrid"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <details id="chartsDetails" opened="true" summaryText="msg:///charts" width="100%">
            <formLayout id="chartsBlock" width="100%" autoResponsive="true" autoRows="true" expandFields="true" expandColumns="true"/>
        </details>

        <details id="filters" opened="true" summaryText="msg:///filters" width="50%" maxWidth="40em">
            <div classNames="pl-m" width="100%">
                <formLayout width="100%" classNames="gap-x-xl">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="20em" columns="2"/>
                    </responsiveSteps>
                    <textField id="searchField" placeholder="msg://searchField.placeholder" clearButtonVisible="true">
                        <prefix>
                            <icon icon="SEARCH"/>
                        </prefix>
                    </textField>
                    <select id="categorySelect" label=" " placeholder="Category"
                            emptySelectionAllowed="true"/>
                </formLayout>
                <genericFilter id="advancedFilter" dataLoader="categoryItemsDl"
                               opened="false" summaryText="msg:///advanced" themeNames="filled">
                    <properties include=".*"/>
                </genericFilter>
            </div>
        </details>

        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="categoryItemsDataGrid.createAction"/>
            <button id="editButton" action="categoryItemsDataGrid.editAction"/>
            <button id="removeButton" action="categoryItemsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="categoryItemsDl"/>
        </hbox>
        <dataGrid id="categoryItemsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="categoryItemsDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name" filterable="true"/>
                <column property="code" filterable="true"/>
                <column property="category" filterable="true"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
