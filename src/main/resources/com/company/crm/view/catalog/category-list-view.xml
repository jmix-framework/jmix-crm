<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://categoryListView.title"
      focusComponent="categoriesDataGrid">
    <data>
        <collection id="categoriesDc"
                    class="com.company.crm.model.catalog.category.Category">
            <fetchPlan extends="_base">
                <property name="parent" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="categoriesDl"/>
        </collection>
    </data>
    <facets>
        <settings auto="true"/>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <startSlot>
                <button id="createButton" action="categoriesDataGrid.createAction"/>
                <button id="editButton" action="categoriesDataGrid.editAction"/>
                <button id="removeButton" action="categoriesDataGrid.removeAction"/>
            </startSlot>
            <endSlot>
                <simplePagination id="pagination" dataLoader="categoriesDl"/>
            </endSlot>
        </hbox>
        <treeDataGrid id="categoriesDataGrid"
                      hierarchyProperty="parent"
                      editorBuffered="false"
                      width="100%"
                      minHeight="20em"
                      dataContainer="categoriesDc"
                      columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="code" filterable="true" editable="true"/>
                <column property="name" filterable="true" editable="true"/>
                <column property="description" filterable="true" editable="true"/>
            </columns>
        </treeDataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
