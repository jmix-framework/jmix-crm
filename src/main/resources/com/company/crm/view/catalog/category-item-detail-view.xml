<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://categoryItemDetailView.title">
    <data>
        <instance id="categoryItemDc"
                  class="com.company.crm.model.catalog.item.CategoryItem">
            <fetchPlan extends="_base">
                <property name="category" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="categoryItemDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="categoryItemDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityPicker property="category" colspan="2">
                <actions>
                    <action id="lookupAction" type="entity_lookup"/>
                    <action id="clearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField property="name"/>
            <textField property="code"/>
            <textField property="uom"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
