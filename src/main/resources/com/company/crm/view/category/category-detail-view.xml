<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://categoryDetailView.title"
      focusComponent="form">
    <data>
        <instance id="categoryDc"
                  class="com.company.crm.model.catalog.category.Category">
            <fetchPlan extends="_base">
                <property name="parent" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="categoryDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="categoryDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
            </responsiveSteps>
            <textField id="codeField" property="code"/>
            <textField id="nameField" property="name"/>
            <entityPicker id="parentField" property="parent">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="descriptionField" height="9.5em" property="description"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
