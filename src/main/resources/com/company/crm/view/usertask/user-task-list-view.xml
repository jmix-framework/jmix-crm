<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://userTaskListView.title">
    <data>
        <collection id="userTasksDc"
                    class="com.company.crm.model.user.UserTask">
            <fetchPlan extends="_base">
                <property name="author" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="userTasksDl"/>
        </collection>
        <instance id="userTaskDc"
                  class="com.company.crm.model.user.UserTask">
            <fetchPlan extends="_base">
                <property name="author" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="userTaskDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" width="100%" height="100%">
            <vbox id="listLayout" height="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <startSlot>
                        <button id="createButton" action="userTasksDataGrid.createAction"/>
                        <button id="editButton" action="userTasksDataGrid.editAction"/>
                        <button id="removeButton" action="userTasksDataGrid.removeAction"/>
                    </startSlot>
                    <endSlot>
                        <simplePagination id="pagination" dataLoader="userTasksDl"/>
                    </endSlot>
                </hbox>
                <dataGrid id="userTasksDataGrid"
                          width="100%"
                          minHeight="10em"
                          themeNames="row-stripes"
                          dataContainer="userTasksDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="createAction" type="list_create"/>
                        <action id="editAction" type="list_edit"/>
                        <action id="removeAction" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="title"/>
                        <column property="dueDate"/>
                        <column property="isCompleted"/>
                    </columns>
                    <emptyStateComponent>
                        <hbox width="100%" height="100%" justifyContent="CENTER" alignItems="CENTER">
                            <h3 text="msg://defaultGridEmptyStateText"/>
                        </hbox>
                    </emptyStateComponent>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="userTaskDc" autoResponsive="true"
                            maxColumns="1" expandColumns="true" expandFields="true">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <textField id="titleField" property="title"/>
                    <textArea id="descriptionField" height="9.5em" property="description"/>
                    <datePicker id="dueDateField" property="dueDate"/>
                    <switch id="isCompletedField" property="isCompleted"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveButton" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelButton" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
