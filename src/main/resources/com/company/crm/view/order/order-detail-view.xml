<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view" xmlns:dynattr="http://jmix.io/schema/dynattr/flowui"
      title="msg://orderDetailView.title" focusMode="NO_FOCUS">
    <data>
        <instance id="orderDc"
                  class="com.company.crm.model.order.Order">
            <fetchPlan extends="_base">
                <property name="orderItems" fetchPlan="_base"/>
                <property name="client" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="orderDl"/>
            <collection id="orderItemsDc" property="orderItems"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <dynattr:dynamicAttributes/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose" text="msg:///actions.Save"/>
        <action id="closeAction" type="detail_close" text="msg:///actions.Close" icon="vaadin:close"/>
        <action id="cloneAction" text="msg:///clone" icon="vaadin:copy"/>
        <action id="emailAction" text="msg:///email" icon="vaadin:envelope-o"/>
        <action id="downloadAction" text="msg:///download" icon="vaadin:download-alt" actionVariant="SUCCESS"/>
    </actions>
    <layout>
        <hbox width="100%" padding="true" justifyContent="BETWEEN" alignItems="CENTER">
            <hbox>
                <h2 text="msg://com.company.crm.model.order/Order"/>
                <h2 dataContainer="orderDc" property="number"/>
            </hbox>
            <hbox>
                <button id="saveAndCloseButton" action="saveCloseAction"/>
                <button id="closeButton" action="closeAction"/>
                <button action="cloneAction" themeNames="contrast"/>
                <button action="emailAction" themeNames="warning"/>
                <button action="downloadAction"/>
            </hbox>
        </hbox>
        <scroller width="100%" height="100%">
            <div width="100%">
                <component id="statusPipeline" class="com.company.crm.app.ui.component.OrderStatusPipeline"/>
                <formLayout id="form" dataContainer="orderDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <entityPicker property="client" readOnly="true"/>
                    <select id="statusSelect" property="status"/>
                    <datePicker id="dateField" property="date"/>
                    <textField id="quoteField" property="quote"/>
                    <textField id="discountValueField" property="discountValue">
                        <validators>
                            <decimalMin value="0"/>
                        </validators>
                    </textField>
                    <textField id="discountPercentField" property="discountPercent">
                        <validators>
                            <decimalMax value="100"/>
                            <decimalMin value="0"/>
                        </validators>
                    </textField>
                    <textField id="totalField" property="total" readOnly="true" colspan="2"/>
                    <textArea id="commentField" height="8em" colspan="2" property="comment"/>
                </formLayout>

                <h2 text="msg://com.company.crm.model.order/OrderItems" classNames="mb-s mt-l"/>
                <hbox id="buttonsPanel" classNames="buttons-panel mb-s">
                    <startSlot>
                        <button id="createButton" action="orderItemsGrid.createAction"/>
                        <button id="editButton" action="orderItemsGrid.editAction"/>
                        <button id="removeButton" action="orderItemsGrid.removeAction"/>
                    </startSlot>
                </hbox>
                <dataGrid id="orderItemsGrid" dataContainer="orderItemsDc" width="100%" minHeight="15em" multiSort="true">
                    <actions>
                        <action id="createAction" type="list_create">
                            <properties>
                                <property name="openMode" value="DIALOG"/>
                            </properties>
                        </action>
                        <action id="editAction" type="list_edit">
                            <properties>
                                <property name="openMode" value="DIALOG"/>
                            </properties>
                        </action>
                        <action id="removeAction" type="list_remove"/>
                    </actions>
                    <columns>
                        <column property="categoryItem.name" autoWidth="true" flexGrow="0"/>
                        <column property="categoryItem.code" autoWidth="true" flexGrow="0"/>
                        <column property="netPrice" autoWidth="true" flexGrow="0"/>
                        <column property="quantity" autoWidth="true" flexGrow="0"/>
                        <column property="discount" autoWidth="true" flexGrow="0"/>
                        <column property="total"/>
                    </columns>
                </dataGrid>
            </div>
        </scroller>
        <hbox id="footer" padding="true" width="100%" height="4em" alignItems="CENTER"
              classNames="bg-contrast-5 border rounded-l">
            <h3 text="Total:" classNames="mr-l"/>
            <span text="Products"/>
            <h3 id="orderItemsCount"/>
            <split orientation="HORIZONTAL" height="100%">
                <div/>
                <div/>
            </split>
            <span text="Cost"/>
            <h3 dataContainer="orderDc" property="total"/>
            <h3 text="$"/>
        </hbox>
    </layout>
</view>
