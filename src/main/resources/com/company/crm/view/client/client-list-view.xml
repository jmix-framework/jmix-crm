<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://clientListView.title"
      focusComponent="clientsDataGrid">
    <data>
        <collection id="clientsDc" class="com.company.crm.model.client.Client">
            <fetchPlan extends="_base">
                <property name="accountManager" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="clientsDl" readOnly="true">
                <query>
                    <![CDATA[select c from Client c order by c.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <settings auto="true"/>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <formLayout id="chartsBlock" width="100%" autoResponsive="true" autoRows="true" columnWidth="22em"/>
        <div id="filterPanel" width="100%" classNames="pb-m">
            <hbox alignItems="CENTER">
                <textField id="searchField" placeholder="msg://searchField.placeholder"
                           width="50%" minWidth="10em" maxWidth="30em" classNames="rounded-full">
                    <prefix>
                        <icon icon="SEARCH"/>
                    </prefix>
                </textField>
                <switch id="showOnlyMyClientsCheckBox" label="msg://showOnlyMyClients"/>
            </hbox>
            <formLayout classNames="pb-m">
                <select id="typeSelect" placeholder="msg://typePlaceholder"
                        itemsEnum="com.company.crm.model.client.ClientType"/>
                <select id="accountManagerSelect" label=" " placeholder="msg://accountManagerPlaceholder"/>
                <select id="categorySelect" placeholder="msg://categoryPlaceholder"
                        itemsEnum="com.company.crm.view.client.ClientCategory"/>
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="1"/>
                    <responsiveStep minWidth="40em" columns="3"/>
                </responsiveSteps>
            </formLayout>
            <genericFilter dataLoader="clientsDl" summaryText="msg:///advancedFilter" opened="false" themeNames="small">
                <properties include=".*"/>
            </genericFilter>
        </div>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="clientsDataGrid.createAction"/>
            <button id="editButton" action="clientsDataGrid.editAction"/>
            <button id="removeButton" action="clientsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="clientsDl" autoLoad="true"/>
        </hbox>
        <dataGrid id="clientsDataGrid"
                  width="100%"
                  minHeight="30em"
                  dataContainer="clientsDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true" sortable="true">
                <column property="name" filterable="true" autoWidth="true"/>
                <column property="fullName" filterable="true"/>
                <column property="type" filterable="true"/>
                <column property="accountManager" filterable="true"/>
                <column property="address" filterable="true"/>
                <column property="vatNumber" filterable="true"/>
                <column property="regNumber" filterable="true"/>
                <column property="website" filterable="true"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
