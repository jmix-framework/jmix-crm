<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://clientListView.title"
      focusComponent="searchField">
    <data>
        <collection id="clientsDc" class="com.company.crm.model.client.Client">
            <fetchPlan extends="_base">
                <property name="accountManager" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="clientsDl" readOnly="true">
                <query>
                    <![CDATA[select distinct c from Client c order by c.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <settings auto="true"/>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters id="urlQueryParameters">
            <pagination component="pagination"/>
            <genericFilter component="advancedFilter"/>
            <dataGridFilter component="clientsDataGrid"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <formLayout id="statBlock" width="100%"
                    autoResponsive="true" autoRows="true"
                    expandFields="true" expandColumns="true">
            <component id="ordersSumCard" class="com.company.crm.app.util.ui.component.card.CrmCard"/>
            <component id="paymentsSumCard" class="com.company.crm.app.util.ui.component.card.CrmCard"/>
            <component id="averageBillCard" class="com.company.crm.app.util.ui.component.card.CrmCard"/>
        </formLayout>
        <div width="50%" maxWidth="40em">
            <formLayout>
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="1"/>
                    <responsiveStep minWidth="30em" columns="2"/>
                </responsiveSteps>
                <textField id="searchField" width="100%" placeholder="msg://searchField.placeholder"
                           clearButtonVisible="true">
                    <prefix>
                        <icon icon="SEARCH"/>
                    </prefix>
                </textField>
                <switch id="showOnlyMyClientsCheckBox" label="msg://showOnlyMyClients"/>
            </formLayout>
            <formLayout>
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="1"/>
                    <responsiveStep minWidth="30em" columns="3"/>
                </responsiveSteps>
                <select id="typeSelect" placeholder="msg://typePlaceholder"
                        itemsEnum="com.company.crm.model.client.ClientType" emptySelectionAllowed="true"/>
                <select id="accountManagerSelect" label=" " placeholder="msg://accountManagerPlaceholder"
                        emptySelectionAllowed="true"/>
                <select id="categorySelect" placeholder="msg://categoryPlaceholder"
                        itemsEnum="com.company.crm.view.client.ClientCategory" emptySelectionAllowed="true"/>
            </formLayout>
            <genericFilter id="advancedFilter" dataLoader="clientsDl"
                           opened="false" summaryText="msg:///advanced" themeNames="filled">
                <properties include=".*"/>
            </genericFilter>
        </div>

        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="clientsDataGrid.createAction"/>
            <button id="editButton" action="clientsDataGrid.editAction"/>
            <button id="removeButton" action="clientsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="clientsDl" autoLoad="true"/>
        </hbox>
        <dataGrid id="clientsDataGrid"
                  width="100%"
                  minHeight="30em"
                  dataContainer="clientsDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true" sortable="true">
                <column property="name" autoWidth="true"/>
                <column property="type"/>
                <column property="accountManager"/>
                <column property="vatNumber"/>
                <column property="regNumber"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
