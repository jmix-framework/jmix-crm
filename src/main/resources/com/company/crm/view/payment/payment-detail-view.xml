<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://paymentDetailView.title" focusMode="NO_FOCUS">
    <data>
        <instance id="paymentDc"
                  class="com.company.crm.model.payment.Payment">
            <fetchPlan extends="_base">
                <property name="invoice" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="paymentDl"/>
        </instance>
        <collection id="invoicesDc" class="com.company.crm.model.invoice.Invoice">
            <loader id="invoicesDl"/>
        </collection>
    </data>
    <facets>
        <settings auto="true"/>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="paymentDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityComboBox id="invoiceField" property="invoice" itemsContainer="invoicesDc">
                <actions>
                    <action id="entityLookupAction" icon="PLUS"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityComboBox>
            <datePicker id="dateField" property="date"/>
            <textField id="amountField" property="amount"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
