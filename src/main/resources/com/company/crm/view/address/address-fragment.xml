<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <instance id="addressDc" class="com.company.crm.model.address.Address"/>
    </data>
    <content>
        <vbox width="100%">
            <formLayout id="addressForm" dataContainer="addressDc" width="100%">
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="1"/>
                    <responsiveStep minWidth="20em" columns="2"/>
                </responsiveSteps>
                <textField property="country"/>
                <textField property="building"/>
                <textField property="city"/>
                <textField property="apartment"/>
                <textField property="street"/>
                <textField property="postalCode"/>
            </formLayout>
        </vbox>
    </content>
</fragment>