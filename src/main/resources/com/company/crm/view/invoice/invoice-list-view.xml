<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <collection id="invoicesDc"
                    class="com.company.crm.model.invoice.Invoice">
            <fetchPlan extends="_base">
                <property name="client" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="invoicesDl" readOnly="true"/>
        </collection>
        <collection id="clientsDc" class="com.company.crm.model.client.Client">
            <fetchPlan extends="_base"/>
            <loader id="clientsDl" readOnly="true"/>
        </collection>
        <collection id="ordersDc" class="com.company.crm.model.order.Order">
            <fetchPlan extends="_base"/>
            <loader id="ordersDl" readOnly="true"/>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <content>
        <vbox>
            <formLayout id="chartsBlock" width="100%">
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="1"/>
                    <responsiveStep minWidth="60em" columns="3"/>
                </responsiveSteps>
            </formLayout>

            <div width="100%" maxWidth="60em">
                <formLayout width="100%">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="20em" columns="3"/>
                        <responsiveStep minWidth="40em" columns="5"/>
                    </responsiveSteps>
                    <entityComboBox id="invoices_ClientComboBox"
                                    placeholder="msg:///clientComboBox.placeholder"
                                    metaClass="Client" itemsContainer="clientsDc">
                        <actions>
                            <action id="clear" type="value_clear"/>
                        </actions>
                    </entityComboBox>
                    <entityComboBox id="invoices_OrderComboBox"
                                    placeholder="msg:///orderComboBox.placeholder"
                                    metaClass="Order_" itemsContainer="ordersDc">
                        <actions>
                            <action id="clear" type="value_clear"/>
                        </actions>
                    </entityComboBox>
                    <select id="invoices_StatusSelect" itemsEnum="com.company.crm.model.invoice.InvoiceStatus"
                            placeholder="msg://com.company.crm.view.invoice/statusSelect.placeholder"
                            emptySelectionAllowed="true" emptySelectionCaption="msg://allInvoices"/>
                    <datePicker id="invoices_FromDatePicker"
                                placeholder="msg:///fromDatePicker.label" clearButtonVisible="true"/>
                    <datePicker id="invoices_ToDatePicker"
                                placeholder="msg:///toDatePicker.label" clearButtonVisible="true"/>
                </formLayout>
                <genericFilter id="invoices_AdvancedFilter" dataLoader="invoicesDl" maxWidth="60em"
                               opened="false" summaryText="msg:///advanced" themeNames="filled">
                    <properties include=".*"/>
                </genericFilter>
            </div>

            <hbox id="buttonsPanel" classNames="buttons-panel">
                <button id="createButton" action="invoicesDataGrid.createAction"/>
                <button id="editButton" action="invoicesDataGrid.editAction"/>
                <button id="removeButton" action="invoicesDataGrid.removeAction"/>
                <simplePagination id="invoices_pagination" dataLoader="invoicesDl"/>
            </hbox>
            <dataGrid id="invoicesDataGrid" dataContainer="invoicesDc"
                      width="100%"
                      minHeight="20em"
                      multiSort="true"
                      themeNames="column-borders"
                      columnReorderingAllowed="true">
                <actions>
                    <action id="createAction" type="list_create">
                        <properties>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="editAction" type="list_edit">
                        <properties>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="removeAction" type="list_remove"/>
                </actions>
                <columns resizable="true" sortable="true">
                    <column property="status" autoWidth="true" flexGrow="0"/>
                    <column property="order.number" autoWidth="true" flexGrow="0"
                            header="msg://com.company.crm.model.invoice/Invoice.order"/>
                    <column property="client"/>
                    <column property="date" autoWidth="true" flexGrow="0"/>
                    <column property="dueDate"/>
                    <column property="vat" autoWidth="true" flexGrow="0"/>
                    <column property="subtotal" autoWidth="true" flexGrow="0"/>
                    <column property="total"/>
                </columns>
            </dataGrid>
            <hbox id="lookupActions" visible="false">
                <button id="selectButton" action="selectAction"/>
                <button id="discardButton" action="discardAction"/>
            </hbox>
        </vbox>
    </content>
</fragment>
