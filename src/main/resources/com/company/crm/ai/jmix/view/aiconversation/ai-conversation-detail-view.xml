<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:ai="http://company.crm/ai-conversation-component.xsd"
      title="msg://aiConversationDetailView.title"
      focusComponent="form">
    <data>
        <instance id="aiConversationDc"
                  class="com.company.crm.ai.entity.AiConversation">
            <fetchPlan extends="_base"/>
            <loader id="aiConversationDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>

        <!-- Chat Section with @Install pattern integration -->
        <vbox id="chatSection" expand="aiComponent" height="100%" spacing="true">
            <!-- AI Conversation Component configured via @Install annotations -->
            <ai:aiConversation id="aiComponent"
                               showHeader="false"
                               width="100%" height="100%"/>
        </vbox>
    </layout>
</view>
