<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://aiConversationDetailView.title"
      focusComponent="aiConversationFragment">
    <data>
        <instance id="aiConversationDc"
                  class="com.company.crm.ai.entity.AiConversation">
            <fetchPlan extends="_base"/>
            <loader id="aiConversationDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <vbox id="chatSection" expand="aiConversationFragment" height="100%" spacing="true">
            <fragment id="aiConversationFragment"
                      class="com.company.crm.ai.jmix.view.aiconversation.AiConversationFragment"
                      width="100%" height="100%">
                <properties>
                    <property name="conversationContainer" value="aiConversationDc" type="CONTAINER_REF"/>
                </properties>
            </fragment>
        </vbox>
    </layout>
</view>
