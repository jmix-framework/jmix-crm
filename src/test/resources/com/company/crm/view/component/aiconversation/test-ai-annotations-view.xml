<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:ai="http://company.crm/ai-conversation-component.xsd"
      title="AI Annotations Test View">
    <layout>
        <vbox id="mainVBox" padding="true" spacing="true" width="100%" height="100%">
            <h1 text="AI Annotations Test"/>
            <span text="This view demonstrates all Jmix framework annotation patterns (@Install, @Supply, @Subscribe) with the AiConversationComponent."/>

            <span text="Jmix Annotation Patterns:"/>
            <vbox spacing="true" padding="true">
                <span text="• @Install messageProcessor - Function-based message processing"/>
                <span text="• Manual messageSentHandler - Programmatic handler registration"/>
                <span text="• Event system - Basic EventBus integration for future @Subscribe support"/>
            </vbox>

            <ai:aiConversation id="aiComponent"
                               showHeader="true"
                               headerTitle="msg://crm.chat.title"
                               assistantName="msg://crm.assistant.name"
                               userName="msg://crm.user.name"
                               width="100%" height="400px"/>
        </vbox>
    </layout>
</view>